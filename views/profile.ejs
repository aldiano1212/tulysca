<%- include("partials/header.ejs") %>
    <div class="profile-container">
        <div class="profile-information">
            <img src="">
            <h1>Human #A</h1>
            <p> a Test subject for this project</p>
        </div>
        <div class="profile-story-container">
            <% if (post === 0) { %>
                <div class="profile-no-story-container">
                    <div class="px-4 py-5 my-5 text-center">
                        <div class="col-lg-6 mx-auto">
                            <p class="lead mb-4">You have no story yet</p>
                            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                                <a href="/post"><button type="button" class="btn btn-outline-secondary btn-lg px-4">Post a Story</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else if (post > 0) { %>
                <div class="col-md-8 profile-story" style="margin-top: 3rem;">
                    <h3 class="pb-4 mb-4 fst-italic border-bottom">
                      Your Story
                    </h3>
                    <% for (let i = totalPost.length - 1; i >= 0 - 1; i--) { %>
                    <article class="blog-post shape-of-post">
                      <h4 class="display-5 link-body-emphasis mb-1"><%= titlePost[i] %>
                        <svg class="bi bi-book-half" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" width="2rem" height="2rem" fill=<%=colorPost[i]%>>
                            <path d="M8.5 2.687c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783"/>
                          </svg>
                    </h4>
                      <p class="blog-post-meta"><%= day.getDate() %> <span> - </span> <%= day.getMonth() + 1 %> <span> - </span> <%= day.getFullYear() %></p>
                        <p class="card-text mb-auto"><%= descriptionPost[i] %></p>
                      </article>
                    <% } %>
            </div>
            <% } %>
        </div>
    </div>

    

<%- include("partials/footer.ejs") %>